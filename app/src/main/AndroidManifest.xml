<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yxy.ceo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".model.CApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.activity.MainActivity"
            android:launchMode="singleTask"
            android:configChanges="locale" />
        <activity
            android:name=".controller.activity.SpalashActivity"
            android:theme="@style/SpalashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />

        <activity android:name=".controller.activity.CommenActivity"
            android:launchMode="singleTop"></activity>
    </application>

</manifest>